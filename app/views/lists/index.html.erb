<h1>Movies</h1>

<% if user_signed_in? %>
<table>
  <thead>
    <tr style="text-align:left">
      <th class="border" style="border-left: 2px solid #000">movie name</th>
      <th class="border">rating</th>
      <th colspan="3" class="border"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <% if list.user == current_user %>
      <tr>
        <td class="border" style="border-left: 2px solid #000"><%= list.name %></td>
        <td class="border"><%= list.rating %></td>
        <td class="border"><%= link_to 'Show', list %></td>
        <td class="border"><%= link_to 'Edit', edit_list_path(list) %></td>
        <td class="border"><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>      
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path %>

<% else %>

<p>Pls Login</p>

<% end %>